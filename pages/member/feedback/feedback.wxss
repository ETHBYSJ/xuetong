/* pages/member/feedback/feedback.wxss */
.header_pic {
  width: 332.4rpx;
  height: 75rpx;
  margin-left: 208.8rpx;
  margin-top: 40rpx;
}
.container {
  height: 100vh;
}
.feedback_wrapper {
  position: relative;
}
.feedback_header {
  height: 70rpx;
  background-color:rgb(242,242,242);
}
.feedback_content {
  /*background-color: white;*/
  padding-bottom: 50rpx;
  position: relative;
}
.feedback_content_header {
  height: 220rpx;
  border-bottom: 1rpx solid rgb(236,236,236);
  position: relative;
}
.img_wrapper {
  float: left;
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx 5rpx 0;
  padding-top: 10rpx;
  padding-left: 20rpx
}
.img_wrapper image {
  width: 180rpx;
  height: 180rpx; 
  border: 2rpx solid #1296db;
  border-radius: 20rpx;
}
.student_info {
  float: left;
  height: 220rpx;
  width: 500rpx;
  padding-left: 20rpx;
  position: relative;
}
.student_name {
  height: 220rpx;
  line-height: 220rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.student_time {
  font-size: 26rpx;
  position: absolute;
  bottom: 30rpx;
}
.feedback_block {
  height: 150rpx;
  border-bottom: 2rpx solid rgb(236,236,236);
  position: relative;  
}
.feedback_index {
  height: 150rpx;
  width: 100rpx;
  float: left;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #1296db;
  font-weight: bold;
}
.feedback_date {
  float: left;
  height: 150rpx;
  position: realative;
}
.feedback_date_wrapper {
  width: 220rpx;
  height: 60rpx;
  border: 4rpx solid rgb(146, 209, 79);
  border-radius: 50rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 60rpx;
}
.feedback_date_start {  
  width: 250rpx;
  height: 150rpx;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
}
.feedback_date_mid {
  width: 80rpx;
  height: 150rpx;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
}
.circle {
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  border: 0.5rpx solid rgb(238,238,238);
  color: rgb(146, 209, 79);  
  text-align: center;
}
.circle text {
  line-height: 45rpx;
  font-size: 26rpx;
}
.feedback_date_end {
  width: 250rpx;
  height: 150rpx;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
}
.feedback_block::after {
  content: " ";
  display: inline-block;
  height: 13rpx;
  width: 13rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: rgb(191,191,191);
  border-style: solid;
  -webkit-transform: matrix(.71, .71, -.71, .71, 0, 0);
  transform: matrix(.71, .71, -.71, .71, 0, 0);
  position: relative;
  top: 70rpx;
  left: 30rpx;
}

.add-study {
  height: 100rpx;
  width: 100%;
  border-bottom: 1rpx solid rgb(236,236,236);
  padding-top: 30rpx;
}
.add-btn {
  height: 70rpx;
  width: 350rpx;
  color: white;
  background: rgb(146, 209, 79);
  font-size: 27rpx;
  line-height: 70rpx;
  font-family: "微软雅黑";
}
button::after{
  border: none;
} 