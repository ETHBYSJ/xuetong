.page {
  background-color: #d9d9d9;
}
.container {
  height: 100vh;
}
.record_block {
  width: 100%;
  height: 362rpx;
  /*background-color: blue;*/
}
.record_header {
  height: 60rpx;
  background-color: #d9d9d9;
}
.record_content {
  height: 302rpx;
  /*background-color: green;*/
}
.record_content_top {
  height: 50%;
  position: relative;
  background-color: white;
}
.record_content_bottom {
  height: 50%;
  background-color: white;
  position: relative;
  border-top: 2rpx solid #d9d9d9;
}
.circle {
  position: absolute;
  top: 50rpx;
  left: 160rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border: 2rpx solid #1296db;
  background-color: white;
  z-index: 999;
}
.circle_warning {
  position: absolute;
  top: 50rpx;
  left: 160rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border: 2rpx solid red;
  background-color: white;
  z-index: 999;
}
.detail {
  color: #8a8a8a;
  font-size: 26rpx;
  position: absolute;
  top: 90rpx;
  left: 220rpx;
}
.detail_warning {
  color: red;
  font-size: 26rpx;
  position: absolute;
  top: 90rpx;
  left: 220rpx;
}
.name {
  position: absolute;
  color: black;
  font-size: 34rpx;
  left: 220rpx;
  top: 34rpx;
}
.record_time {
  position: absolute;
  color: black;
  font-size: 34rpx;
  left: 20rpx;
  top: 34rpx;
}
.line {
  position: absolute;
  background-color: #d9d9d9;
  width: 2rpx;
  height: 160rpx;
  left: 170rpx;
  top: 50rpx;
  z-index: 998;
}
.date {
  position: absolute;
  left: 375rpx;
  top: 0;
}
.date_right {
  position: absolute;
  /*background-color: #1296db;*/
  width: 0;
  height: 0;
  border: 16rpx solid;
  border-color: transparent transparent #1296db #1296db;
  left: 125rpx;
  top: -30rpx;
}
.date_mid {
  position: absolute;
  background-color: rgb(80, 193, 227);
  width: 250rpx;
  height: 60rpx;
  top: -30rpx;
  left: -125rpx;
  text-align: center;
  color: white;
  font-size: 30rpx;
}
.date_left {
  position: absolute;
  /*background-color: #1296db;*/
  width: 0;
  height: 0;
  border: 16rpx solid;
  border-color: transparent #1296db #1296db transparent;
  top: -30rpx;
  left: -155rpx;
}
.text_wrapper {
  position: absolute;
}
.date_text {
  top: 6rpx;
}
