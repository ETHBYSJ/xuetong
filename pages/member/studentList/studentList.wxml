<!--pages/member/studentList/studentList.wxml-->
<view class="studentList">
  <!-- 左侧内容 -->
  <scroll-view>
  <view class="study_header">
  

  <image class="header_pic" src="/images/xqfkls.png"></image>
  </view>

  <view class="student_block" wx:for="{{stuList}}">
    <navigator class="navigator_student" url='/pages/member/studentStudy/studentStudy?id={{item.id}}&name={{item.name}}'>
      <view class="studentpic-wrp">
        <image class="studentpic" src="{{item.photo?vo.imgBaseUrl+''+item.photo:'/assets/icon/loadImg_1.jpg'}}"></image>
      </view>
      <view class="student_baseinfo">
        <view class="student_name">{{item.name}}</view>
      </view>
    </navigator>
  </view>
  </scroll-view>

  <!-- 顶部分类 -->
  <view></view>

  <!-- 右侧字母 -->
  <view class="orientation_region">
    <block wx:for="{{sortList}}" wx:key='{{item.id}}' wx:if="{{item.active==true}}"> 
      <view class="orientation_city {{isActive==item.id ? 'active':'' }}" bindtap="scrollToViewFn" data-id="{{item.id}}" >{{item.region}}</view>
    </block>
  </view>
</view>
