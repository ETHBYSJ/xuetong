.spending_content{
  display: flex;
  position: relative;
  justify-content:flex-start;
margin-top: 10rpx;
}
.spending_content:after {
  content: '';
  display: block;
  width: 653rpx;
  height: 2rpx;
  border-left: 0;
  border-bottom: 2rpx dotted #1296db;
  transform: rotate(0deg);
  position: absolute;
  left: 30rpx;
  top: 55rpx;
}
