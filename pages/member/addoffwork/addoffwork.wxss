.student {
  height: 200rpx;
  border-top: 1rpx solid #d9d9d9;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  /*
  display: flex;
  align-items: center;
  justify-content: center;
  */
}
.base_block {
  height: 100%;
  width: 350rpx;
  float: left;                           
  position: relative;
}
.title {
  left: 25rpx;
  position: absolute;
  font-size: 26rpx;
  color: #8d8d8d;
}
.name {
  position: absolute;
  left: 180rpx;
  top: 100rpx;
  color: black;
  font-size: 29rpx;
  font-weight: bold;
}
.memberpic {
  height: 150rpx;
  width: 150rpx;
  float: left;
  margin-top: 40rpx;
  margin-left: 20rpx;
}

.off_date {
  border-top: 1rpx solid #d9d9d9;
  height: 200rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.date_block {
  height: 200rpx;
  width: 230rpx;
}
.calendar {
  height: 150rpx;
  width: 230rpx;
  border: 2rpx solid rgb(146, 209, 79);
  border-radius: 8rpx;
}
.cal_top {
  background-color: rgb(146, 209, 79);
  width: 100%;
  height: 40%;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cal_bottom {
  width: 100%;
  height: 60%;
  color: black;
  display: flex;
  align-items: center;
  justify-content: center;
}
.month {
  font-size: 30rpx;
}
.day {
  font-size: 34rpx;
}
.date_text {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #d9d9d9;
  font-size: 26rpx;
  width: 100%;
  height: 30rpx;
  border: 2rpx solid rgb(146, 209, 79);
  border-radius: 8rpx;
  margin-top: 8rpx;
}

.base-btn {
  width: 690rpx;
  background: #1296db;
  color: #fff;
  display: block;
  margin-top: 60rpx;
}
.textarea {
  height: 500rpx;
  border-top: 1rpx solid #d9d9d9;
}
textarea {
  width: 700rpx;
  height: 500rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.bottom {
  border-top: 1rpx solid #d9d9d9;
  padding-top: 20rpx;
}