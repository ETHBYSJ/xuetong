}
.base_block {
  height: 100%;
  width: 350rpx;
  float: left;                           
  position: relative;
}
.title {
  left: 25rpx;
  position: absolute;
  font-size: 26rpx;
  color: #8d8d8d;
}
.name {
  position: absolute;
  left: 180rpx;
  top: 100rpx;
  color: black;
  font-size: 29rpx;
  font-weight: bold;
}
.memberpic {
  height: 150rpx;
  width: 150rpx;
  float: left;
  margin-top: 40rpx;
  margin-left: 20rpx;
}

.off_date {
  border-top: 1rpx solid #d9d9d9;  
  height: 220rpx;
  position: relative;
}
.off_date_start {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  width: 375rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  float: left;
}
.off_date_end {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  width: 375rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  float: left;
}
.mid_wrapper {
  position: absolute;
  left: 375rpx;
}
.mid_line {
  position: absolute;
  width: 2rpx;
  height: 220rpx;
  background-color: #d9d9d9;
}
.mid_circle {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  left: -20rpx;
  top: 90rpx;
  border-radius: 50%;
  border: 2rpx solid #d9d9d9;
  background-color: white;
}
.mid_text {
  position: absolute;
  font-size: 28rpx;
  color: rgb(146, 209, 79);
  left: -14rpx;
  line-height: 100%;
  top: 96rpx;
}
.date_block {
  height: 200rpx;
  width: 230rpx;
}
.calendar {
  height: 150rpx;
  width: 230rpx;
  border: 2rpx solid rgb(146, 209, 79);
  border-radius: 8rpx;
}
.cal_top {
  background-color: rgb(146, 209, 79);
  width: 100%;
  height: 40%;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cal_bottom {
  width: 100%;
  height: 60%;
  color: black;
  display: flex;
  align-items: center;
  justify-content: center;
}
.month {
  font-size: 30rpx;
}
.day {
  font-size: 34rpx;
}
.date_text {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #d9d9d9;
  font-size: 26rpx;
  width: 100%;
  height: 30rpx;
  border: 2rpx solid rgb(146, 209, 79);
  border-radius: 8rpx;
  margin-top: 8rpx;
}

.base-btn {
  width: 690rpx;
  background: #1296db;
  color: #fff;
  display: block;
  margin-top: 60rpx;
}
.offwork_textarea {
  /*height: 500rpx;*/
