}
.activity_info {
  width: 600rpx;
  border-bottom: 2rpx solid #d9d9d9;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  margin-left: 75rpx;
  margin-right: 75rpx;
}
.header_time {
  text-align: center;
  font-size: 28rpx;
}
.header_address {
  text-align: center;
  font-size: 28rpx;
}
.activity_time {
  text-align: center;
  font-size: 28rpx;
}
.activity_address {
  text-align: center;
  font-size: 28rpx;
}
.activity_comment {
  margin-top: 40rpx;
  width: 700rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
}
.activity_comment_icon {
  /*float: left;*/
  position: relative;
  font-size: 26rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #1296db;
