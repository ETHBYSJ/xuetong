}
.activity_comment_icon image {
  width: 40rpx;
  height: 40rpx;  
}
.activity_comment_icon text {
  padding-left: 10rpx;
}
.activity_comment_textarea {
  margin-top: 20rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 10rpx;
  font-size: 26rpx;
