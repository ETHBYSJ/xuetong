.tap-wrp{
  display: flex;
  width: 100%;
  height: 65rpx;
  line-height: 65rpx;
  margin-top:8rpx;
  margin-bottom: 8rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: bold;
  border: 1rpx solid #1296db;
  background: #fff;
}
.tab-list{
  flex: 1;
  border-right: 1rpx solid #1296db;
}
.tab-list:last-child{
  border-right:none; 
}
.on{
  background: #1296db;
  color: #fff;
}
.payment_name {
  padding-bottom: 10rpx;
  padding-left: 20rpx;
  height: 160rpx;
  border-bottom: 2rpx solid rgb(236,236,236);  
}
.img_wrapper {
  width: 140rpx;
  height: 160rpx;
  align-items: center;
  display: flex;
  float: left;
}
.img_wrapper image {
  width: 140rpx;
  height: 140rpx;
  border: 2rpx solid #1296db;
  border-radius: 10rpx;
}
.student_info {
  position: relative;
  width: 400rpx;
  height: 160rpx;
  float: left;
  padding-left: 20rpx;
}
.student_name {
  position: absolute;
  font-size: 32rpx;
  font-weight: bold;
  top: 30rpx;
}
.student_date {
  position: absolute;
  font-size: 26rpx;
  font-weight: bold;
  bottom: 30rpx;
}
.container {
  height: 100vh;
}
.search_bar {
  position: relative;
  padding: 10rpx 10rpx 10rpx 20rpx;
  display: flex;
  border: 2rpx solid rgb(236,236,236);
  border-radius: 10rpx;
  margin: 30rpx 15rpx 20rpx 15rpx;
}
.location {
  position: relative;
  height: 50rpx;
  padding-right: 40rpx;
  line-height: 50rpx;
  border-right: 2rpx solid #1296db;
}
.location_text {
  color: #1296db;
  font-size: 30rpx;
  line-height: 50rpx;
  height: 50rpx;
}
.location_icon {
  position: absolute;
  border: 8rpx solid;
  border-color: transparent #1296db #1296db transparent;
  width: 0;
  height: 0;
  bottom: 5rpx;
  right: 10rpx;
}
.search_form {
  /*position: relative;*/
}
.search_form_input {
  padding-left: 20rpx;
  font-size: 30rpx;
}
.search_icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
}
.search_icon_image {
  width: 50rpx;
  height: 50rpx;
}
.activity_block {
  height: 200rpx;
  position: relative;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border: 2rpx solid rgb(236,236,236);
  border-radius: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.activity_img_container {
  padding-left: 20rpx;
  height: 200rpx;
  width: 220rpx;
  align-items: center;
  display: flex;
  float: left;
}
.activity_img {
  height: 146rpx;
  width: 188rpx;
  /*
  position: absolute;
  top: 25rpx;
  left: 20rpx;
  */
  border-radius: 5rpx;
}
.activity_info {
  float: left;
  position: relative;
  height: 200rpx;
}
.activity_info_header {
  position: absolute;
  font-weight: bold;
  color: black;
  font-size: 32rpx;
  left: 0rpx;
  top: 30rpx;
  width: 450rpx;
}
.activity_info_bottom {
  position: absolute;
  font-size: 26rpx;
  bottom: 30rpx; 
  width: 450rpx;
}
.payment_date {
  border-bottom: 2rpx solid rgb(242,242,242);
  height: 220rpx;
  position: relative;
  background-color: white;
}
.payment_date_start {
  margin-left: 75rpx;
  margin-top: 15rpx;
  height: 200rpx;
  width: 220rpx;
  float: left;
}
.payment_date_end {
  margin-left: 160rpx;
  margin-top: 15rpx;
  height: 200rpx;
  width: 220rpx;
  float: left;
}
.date_block {
  height: 150rpx;
  width: 221rpx;
}
.calendar {
  height: 138rpx;
  width: 213rpx;
  border: 4rpx solid rgb(146, 209, 79);
  border-radius: 10rpx;
}
.cal_top {
  background-color: rgb(146, 209, 79);
  width: 100%;
  height: 35%;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cal_bottom {
  width: 100%;
  height: 65%;
  color: black;
  display: flex;
  align-items: center;
  justify-content: center;
}
.month {
  font-size: 30rpx;
}
.day {
  font-size: 34rpx;
  font-weight: bold
}
.date_text {
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgb(191,191,191);
  font-size: 24rpx;
  width: 97%;
  height: 35rpx;
  border: 4rpx solid rgb(191,191,191);
  border-radius: 18rpx;
  margin-top: 8rpx;
}
.mid_wrapper {
  position: absolute;
  left: 375rpx;
}
.mid_line {
  position: absolute;
  width: 2rpx;
  height: 220rpx;
  background-color: rgb(236,236,236);
}
.mid_circle {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  left: -20rpx;
  top: 90rpx;
  border-radius: 50%;
  border: 2rpx solid rgb(236,236,236);
  background-color: white;
  text-align: center;
  font-size: 28rpx;
  color: rgb(146, 209, 79);
  line-height: 40rpx;
}

.payment_prompt {
  border-bottom: 2rpx solid rgb(236,236,236);
  color: rgb(191,191,191);
  font-size: 26rpx;
  padding: 10rpx 20rpx 10rpx 20rpx;
}
.payment_info {
  padding: 20rpx;
  font-size: 30rpx;
  color: black;
  font-weight: bold;
  line-height: 200%;
}
.info_header {
  color: #8d8d8d;
}
.pay_amount {
  float: right;
  font-size: 34rpx;
}
.pay {
  padding-top: 20rpx;
  padding-bottom: 20rpx; 
}
.pay_btn {
  background-color: #00b848;
  color: white;
  width: 690rpx;
}
.consult {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.consult_btn {
  background-color: #00b848;
  color: white;
  width: 690rpx;
}