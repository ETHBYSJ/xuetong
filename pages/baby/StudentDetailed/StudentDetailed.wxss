@import "/pages/member/StudentAttendRecord/StudentAttendRecord.wxss";
.tap-wrp{
  display: flex;
  width: 100%;
  height: 65rpx;
  line-height: 65rpx;
  margin-top:8rpx;
  margin-bottom: 8rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: bold;
  border: 1rpx solid #1296db;
  background: #fff;
}
.tab-list{
  flex: 1;
  border-right: 1rpx solid #1296db;
}
.tab-list:last-child{
  border-right:none; 
}
.on{
  background: #1296db;
  color: #fff;
}
.test_icon {
  width: 26rpx;
  height: 26rpx;
  /*background-color: white;*/
  position: relative;
  margin-right: 20rpx;
  vertical-align: middle;
  display: inline-block;
  border: 2rpx solid #d9d9d9;
  border-radius: 50%;
}
.test_icon-checked {
  position: absolute;
  background-color: #1296db;
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
}
.test_icon-unchecked {
  position: absolute;
  background-color: white;
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
}
.test_icon-warning {
  position: absolute;
  background-color: red;
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
}
.test_text-unchecked {
  display: inline-block;
  vertical-align: middle;
  line-height: 40rpx;
  color: #d9d9d9;
}
.test_text-checked {
  display: inline-block;
  vertical-align: middle;
  line-height: 40rpx;
  color: #1296db;
}
.test_text-warning {
  display: inline-block;
  vertical-align: middle;
  line-height: 40rpx;
  color: red;
}
.radioitems {
  display: inline-block;
  margin-right: 40rpx;
}
.radioitems:last-child {
  margin-right: auto;
}
.picker {
  display: flex;
  align-items: center;
  justify-content: center;
}
.container {
  height: 100vh;
}
.homework_block {
  position: relative;
}
.homework_header {
  height: 60rpx;
  background-color: #d9d9d9;
}
.homework_content {
  background-color: white;
  padding-bottom: 50rpx;
  padding-top: 100rpx;
  position: relative;
}
.name {
  position: absolute;
  top: 30rpx;
  left: 10rpx;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.name text {
  font-size: 30rpx;
  padding-left: 10rpx;
  font-weight: bold;
}
.name_warning {
  width: 20rpx;
  height: 20rpx;
  background-color: red;
  border-radius: 50%;
  border: 2rpx solid #d9d9d9;
  float: left;
  z-index: 999;
}
.name_normal {
  width: 20rpx;
  height: 20rpx;
  background-color: #1296db;
  border-radius: 50%;
  border: 2rpx solid #d9d9d9;
  float: left;
  z-index: 999;
}
.email_upload {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.email_btn {
  width: 250rpx;
  color: #fff;
  display: block;
  background: #8d8d8d;
  font-size: 30rpx;
}
.not_email_btn {
  width: 250rpx;
  color: #fff;
  display: block;
  background: rgb(146, 208, 80);
  font-size: 30rpx;
}
.line {
  width: 4rpx;
  height: 100vh;
  left: 19rpx;
  background-color: #d9d9d9;
  position: absolute;
  z-index: 1;
}
.homework_base_block {
  padding-left: 80rpx;
  padding-right: 110rpx;
}
.homework_status {
  font-size: 26rpx;
  vertical-align: middle;
  padding-top: 6rpx;
  padding-bottom: 6rpx;
  height: 40rpx;
}
.prompt {
  display: inline-block;
  color: #1296db;
  line-height: 40rpx;
  vertical-align: middle;
}
.homework_detail {
  padding: 10rpx 20rpx 10rpx 20rpx;
  border: 3rpx solid #d9d9d9;
  font-size: 26rpx;
  color: black;
}
.homework_detail-warning {
  padding: 10rpx 20rpx 10rpx 20rpx;
  border: 3rpx solid #d9d9d9;
  font-size: 26rpx;
  color: red;
}
.feedback {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.feedback_btn {
  width: 690rpx;
  color: #fff;
  display: block;
  background: #1296db;
  font-size: 30rpx;
}
.feedback_btn_done {
  width: 690rpx;
  color: #fff;
  display: block;
  background: #d9d9d9;
  font-size: 30rpx;
}
